

<header id="top">
  <div class="container">
    <div class="row header-info">
      <div class="col-sm-10 col-sm-offset-1 text-center">
        <div class="panel-transparent">
        <h1 class="wow fadeIn shadow">Movie<em>GO!</em></h1>
        </div>
          <br />
        <p class="lead wow fadeIn shadow" data-wow-delay="0.5s">The fastest way to go to the movies.</p>
        <br />

        <div class="row">
          <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
            <div class="row">
              <div class="col-xs-4 text-right wow fadeInUp" data-wow-delay="1s">
                <%= link_to "About", "#main-info", class: "btn btn-secondary btn-lg scroll" %>
              </div>
              <div class="col-xs-4 text-middle wow fadeInUp" data-wow-delay="1.4s">
                <%= link_to "Login", login_path, class: "btn btn-secondary btn-lg" %>
              </div>
              <div class="col-xs-4 text-left wow fadeInUp" data-wow-delay="1.8s">
                <%= link_to "Go", movies_path, class: "btn btn-secondary btn-lg" %>
              </div>
            </div><!--End Button Row-->
          </div>
        </div>

      </div>
    </div>
  </div>
</header>
<a class="btn btn-default" href="#top">
  <img src=<%= image_path("icon-arrow-up-b-128.png")%> style="position : absolute; opacity :.5;">
</a>
